<div id="scheduleMultiplePosts" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Set Date and Time</h4>
      </div>
      <div class="modal-body">
        <p><%= datetime_field_tag "scheduled_at" %></p>
        <strong>Note : </strong>
        <p>If post is already tweeted it will be retweeted in that case.</p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="schedule-multiple-posts-button">Schedule</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

