<%- model_class = Campaign -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_at) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.start_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:interval) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.interval %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:interval_type) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.interval_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:document_id) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.document_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              campaigns_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_campaign_path(@campaign), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              campaign_path(@campaign),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>