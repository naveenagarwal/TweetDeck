<% @body_class_name = "import-page" %>

<section class="row main-content">
  <div class="col-2">
  </div>
  <div class="col-10 main-area">
    <div class="main-wrapper">
      <div class="setting-screen">
        <div class="card-header">
          <h2>Settings and Privacy</h2>
        </div>
        <div class="settings">
          <%= form_for @profile do |f| %>
            <div class="form-group ">
              <label>Default Interval:</label>
              <div class="interval-wrapper">
                <input class="inverval-input" type="number" class="" name="profile[default_interval]" value="<%= @profile.default_interval %>">
                <div class="intervals">
                  <% ["seconds", "minutes", "hours", "days", "weeks", "months" ].each do |o| %>
                    <%= f.radio_button :default_interval_type, o, id: o %>
                    <label for=<%= o %> ><%= o.humanize %></label>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label>Retweet Enable:</label>
              <div class="checkbox_list">
                <% if @profile.default_retweet_enable %>
                  <input id="list1" type="checkbox" name="profile[default_retweet_enable]" checked>
                <% else %>
                  <input id="list1" type="checkbox" name="profile[default_retweet_enable]" >
                <% end %>
                <label for="list1"></label>
              </div>
              <p>check this if you want the default interval also works with retweets automatically.</p>
            </div>
            <div class="form-group controls">
              <label></label>
              <input type="submit" value="Save" name="">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>